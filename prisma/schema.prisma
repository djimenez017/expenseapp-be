model User {
  id               Int     @id(map: "User_pk") @unique(map: "Users_userid_uindex") @default(autoincrement())
  fullName         String
  username         String
  password         String?
  emailAddress     String
  website          String?
  phoneNumber      String?
  expenses         Expense[]
}

model Expense {
  id               Int @id @default(autoincrement()) @unique
  author           User @relation(fields: [expenseAuthor], references: [id])
  expenseAuthor    Int
  date        DateTime @default(now())
  name      String
  category  Category[]
  amount    Int
  dateDue   DateTime
  frequency        Frequency
}

model Category {
  id              Int @id @default(autoincrement()) @unique
  categoryName    String
  expense         Expense @relation(fields: [expenseID], references:[id])
  expenseID       Int
}

enum Frequency {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}